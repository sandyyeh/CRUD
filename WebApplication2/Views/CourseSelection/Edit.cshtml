@model WebApplication2.Models.EditViewModel

@using (Html.BeginForm("Update", "CourseSelection", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.DropDownList("id", Model.StudentListItems, htmlAttributes: new { @class = "form-control" })
        <div class="form-group">
            @Html.LabelFor(model => model.ClassListItems, "", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var item in Model.ClassListItems)
                {
                    <input type="checkbox" id="@item.Name" value="@item.Id" name="selectedClasses"
                           @if (Model.Detail.ClassID.Contains(item.Id)) { <text> checked </text> }
                           @(Html.Raw(item.IsChecked ? "checked=\"checked\"" : ""))
                           class="custom-control-input" />
                    <label class="custom-control-label" for="@item.Name">@item.Name</label>
                }
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存" class="btn btn-default" />
            </div>
        </div>
    </div>
}
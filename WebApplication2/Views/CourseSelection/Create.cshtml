@model WebApplication2.Models.CreateViewModel

@using (Html.BeginForm("Create", "CourseSelection", FormMethod.Post, Model))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.DropDownList("id", Model.StudentListItems, "-----請選擇-----", htmlAttributes: new { @class = "form-control" })
            @Html.LabelFor(model => model.ClassListItems, "", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var item in Model.ClassListItems)
                {
                    <input type="checkbox" value="@item.Id" id="@item.Name" name="selectedClasses"
                           @(Html.Raw(item.IsChecked ? "checked=\"checked\"" : ""))
                           class="custom-control-input" />
                    <label class="custom-control-label" for="@item.Name">@item.Name</label>
                }
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增" class="btn btn-default" />
            </div>
        </div>
    </div>

}

